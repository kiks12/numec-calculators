<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Single Point</title>


  <link rel="stylesheet" href="styles.css" />
</head>
<body>
  
  <%- include("partials/navBar.ejs") %>

  <%- include("partials/sideNavbar.ejs") %>

  <main>
    <form action="">
      <h1>Single Point Iteration Method</h1>
      <br>

      <div class="eight-two">
        <div class="label-input-container">
          <label for="f">Function i.e. f(x): </label>
          <input type="text" name="f" id="f" required/>
        </div>

        <div>
          <label for="unknown">Unknown Value: </label>
          <select name="unknown" id="unknown">
            <option value="x">X</option>
            <option value="y">Y</option>
            <option value="z">Z</option>
          </select>
        </div>
      </div>

      <br>
      <div class="label-input-container">
        <label for="oo">X<sub>0</sub>: </label>
        <input type="number" name="xo" id="xo" required/>
      </div>

      <br>
      <div class="label-input-container">
        <label for="iteration">Iteration: </label>
        <input type="number" name="iteration" id="iteration" />
      </div>

      <br>
      <div class="button-container">
        <% if (table) { %>
          <a href="/single-point">
            <button type="button">Clear</button>
          </a>
        <% } %>
        <button type="reset">Reset</button>
        <button type="submit">Calculate</button>
      </div>
    </form>

    <% if (table) { %>
      <div class="graph-container">
        <canvas id="myChart"></canvas>
      </div>    
    <% } %>
  </main>

  <% if (table) { %>
    <section class="solution-container">
      <div class="solution-div">
        <h2>SOLUTIONS</h2>
        <br>
        <% for (let i=0; i<table.length; i++) { %> 
          <div class="solution">
            <small>
              <strong>
                Iteration No. <%= i+1 %>
              </strong>
            </small>
            <p>X<sub>0</sub> = <%= table[i]['xovar'] %></p>
            <p>f(X<sub>0</sub>) = <%= table[i]['fx'] %></p>
            <p>f(X<sub>L</sub>) = <%= table[i]['fxa'] %></p>
          </div>
          <% }%>
      </div>

      <div class="solution-div">
        <h2>TABLE</h2>
        <br>
        <table>
          <thead>
            <tr>
              <th>Iteration No.</th>
              <th>X<sub>0</sub></th>
              <th>f(X<sub>0</sub>)</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0; i<table.length; i++) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= table[i]['xovar'] %></td>
                <td><%= table[i]['fxa'] %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
  <% } %>

</body>
</html>